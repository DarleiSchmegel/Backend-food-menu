datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  password String?
  plan String?
  restaurant Restaurant?
}


model Restaurant {
  id        Int      @default(autoincrement()) @id
  title     String
  banner     String?
  manager    User @relation(fields: [managerId], references: [id])
  managerId  Int @unique
}